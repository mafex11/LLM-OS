{
  "name": "yuki-ai-desktop",
  "version": "1.0.0",
  "description": "Yuki AI - Your AI copilot for devices",
  "main": "electron/main.js",
  "author": "Yuki AI Team",
  "license": "MIT",
  "scripts": {
    "electron:dev": "set NODE_ENV=development && electron .",
    "electron:build": "electron-builder",
    "electron:build:debug": "electron-builder --verbose --debug",
    "build:backend": "python build_backend.py",
    "build:frontend": "cd ../frontend && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend && npm run electron:build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.yuki.ai.desktop",
    "productName": "Yuki AI",
    "files": [
      "electron/**/*",
      "backend/**/*",
      "backend/api_server.exe",
      "frontend-build/**/*",
      "resources/**/*"
    ],
    "extraFiles": [
      {
        "from": "backend/api_server.exe",
        "to": "backend/api_server.exe"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "resources/LICENSE.txt",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "include": "installer-script.nsh",
      "deleteAppDataOnUninstall": false
    },
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "find-process": "^1.4.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}

