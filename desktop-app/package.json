{
  "name": "yuki-ai-desktop",
  "version": "1.0.0",
  "description": "Yuki AI - Your AI copilot for devices",
  "main": "electron/main.js",
  "author": "Yuki AI Team",
  "license": "MIT",
  "scripts": {
    "electron:dev": "set NODE_ENV=development && electron .",
    "electron:build": "electron-builder",
    "electron:build:debug": "electron-builder --verbose --debug",
    "build:backend": "python build_backend.py",
    "build:frontend": "cd ../frontend && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend && npm run electron:build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.yuki.ai.desktop",
    "productName": "Yuki AI",
    "compression": "maximum",
    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend-build/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/api_server.exe",
        "to": "backend/api_server.exe"
      },
      {
        "from": "frontend-build",
        "to": "frontend-build",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico",
      "sign": null,
      "compression": "maximum",
      "files": [
        "electron/**/*",
        "backend/**/*",
        "frontend-build/**/*",
        "resources/**/*"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "resources/LICENSE.txt",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "deleteAppDataOnUninstall": false,
      "compression": "maximum",
      "compressor": "lzma"
    },
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "asarUnpack": [
      "backend/**/*",
      "frontend-build/**/*"
    ]
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "find-process": "^1.4.7",
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}

